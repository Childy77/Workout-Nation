{{!--==================== High ====================--}}
{{#ifCond intensify "high"}}
<div {{#if isFinished}} id="high-finished" {{else}} id="high-unFinished" {{/if}} class="aTask" data-taskid="{{id}}">
    <div>
        <h2>{{taskname}} ({{intensify}})</h2>
        <h2>Durition: {{duration_minute}} min</h2>
    </div>
    <div>
        Posted by <cite title="username">{{user.username}}</cite> on {{format_date date_created}}
    </div>
    <button class="setFinish">👌</button>
    <button class="undo">↩️</button>
    <button class="deleteTask">🗑️</button>
</div>
{{/ifCond}}

