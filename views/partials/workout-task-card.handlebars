{{!--==================== High ====================--}}
{{#ifCond intensify "high"}}
<div class="card text-center aTask" {{#if isFinished}} id="high-finished" {{else}} id="high-unFinished" {{/if}}
    data-taskid="{{id}}">
    <div class="card-header">
        <h4>{{taskname}}</h4>
    </div>
    <div class="card-body">
        <h5 class="card-title">Intensify: {{intensify}}</h5>
        <h5 class="card-subtitle mb-2 text-muted"> Durition: {{duration_minute}} min</h5>
        <button class="setFinish btn-success">👌</button>
        <button class="undo btn-info">↩️</button>
        <button class="deleteTask btn-danger">🗑️</button>
    </div>
    <div class="card-footer text-muted">
        <h6>Created at: {{format_date_onlyHourMin date_created}}</h6>
    </div>
</div>
{{/ifCond}}
